{
  "name": "@kluster/kaspa-signature",
  "version": "0.1.4",
  "private": false,
  "license": "ISC",
  "scripts": {
    "dev": "npm run build --watch",
    "build": "tsc -b -v",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/K-Kluster/kaspa-js.git"
  },
  "type": "module",
  "main": "./dist/entry.js",
  "types": "./dist/entry.d.ts",
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/entry.js",
      "require": "./dist/entry.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "dependencies": {
    "@kluster/kaspa-address": "*",
    "@noble/hashes": "2.0.1",
    "@noble/secp256k1": "3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/jest": "29.5.12",
    "@types/node": "^22.10.7",
    "babel-jest": "^29.7.0",
    "jest": "29.7.0",
    "ts-jest": "29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  }
}
