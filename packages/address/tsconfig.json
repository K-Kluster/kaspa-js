{
  "extends": "@kluster/typescript-config/base.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "incremental": false,
    "types": ["node"],
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
